@import '../bootstrap'
@import '../theme'

v-overlay($material)
  color: $material.text.primary

theme(v-overlay, "v-overlay")

.v-overlay
  align-items: center
  border-radius: inherit
  display: flex
  justify-content: center
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  pointer-events: none
  transition: $primary-transition

  &__content
    position: relative

  &__scrim
    border-radius: inherit
    bottom: 0
    height: 100%
    left: 0
    position: absolute
    right: 0
    top: 0
    transition: .3s cubic-bezier(.25,.8,.50,1)
    will-change: opacity

  &--absolute
    position: absolute

  &--active
    pointer-events: auto
    touch-action: none
